<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="10dp">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:text="V3 Mobile Plus 2.0"
        android:textColor="@color/color_main_blue"/>

    <TextView
        android:layout_alignBaseline="@+id/app_name"
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/app_name"
        android:layout_toRightOf="@+id/app_name"
        android:text="오전 0:00"
        android:textColor="#cccccc"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:text="title"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/title"
        android:layout_alignBottom="@+id/title"
        android:layout_toEndOf="@+id/title" android:layout_toRightOf="@+id/title" android:maxLines="1" android:text="content" android:textColor="#000000"/>

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="0"
        android:textColor="#000000"/>

</RelativeLayout>


